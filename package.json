{
  "name": "solverforge-wasm-service",
  "version": "0.3.0",
  "private": true,
  "description": "Version management for SolverForge WASM Service",
  "scripts": {
    "release": "commit-and-tag-version",
    "release:dry": "commit-and-tag-version --dry-run"
  },
  "devDependencies": {
    "commit-and-tag-version": "^12.5.0"
  },
  "commit-and-tag-version": {
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      },
      {
        "filename": "pom.xml",
        "updater": "../scripts/pom-version.js"
      }
    ],
    "tagPrefix": "v",
    "skip": {
      "changelog": true
    }
  }
}
